.cut_off{border-right: 1px solid #aaa;}

/*pile 桩 stars*/
.pile{padding: 0 2%; }

.piece { position: relative; margin: 0 45px; margin-bottom: 35px; float: left; width: 150px; text-align: center; transition: background-color .3s ease;}
/*.piece:hover{background-color: #e7e7e7;}*/
.piece .piece_img {margin-bottom: 3px; width: 100%; height: 195px; /*line-height: 195px;*/ background-color: #fff; border-radius: 5px; transition: all .5s ease;}
.piece .piece_img:hover{ transform: translateY(-2px); box-shadow:0 5px 25px rgba(107, 107, 107, 0.36);}
.piece .piece_img img{max-width: 100%;max-height: 100%; border-radius: 5px;transition: box-shadow .3s ease;}
/*.piece .piece_img img:hover{ box-shadow: 3px 3px 10px #ceb5b5;}*/
.piece .piece_check {position: absolute; left: -20px; width: 20px; height: 20px;display: none;}
.piece .piece_content {font-size: 16px; font-weight: bold;}
.piece .gun {position: relative; margin-bottom: 8px; width: 100%; text-align: center; background-color: #fff; border-radius: 5px;}
.piece .item {display: inline-block;margin-right: -4px;transition: background-color .3s ease;}
.piece .icon-qiang {font-size: 22px; color: #28c941;transition: text-shadow .3s ease;}/*阴影：text-shadow: -1px 1px 2px #000;*/
.piece .icon-qiang:hover{text-shadow: 0px 0px 6px;}
.piece .gun_error {color: #ff5f58;transition: text-shadow .3s ease;}
.piece .gun_error:hover{text-shadow: 0px 0px 6px;}
.piece .gun_alert {color: #ffbd2d;transition: text-shadow .3s ease;}
.piece .gun_alert:hover{text-shadow: 0px 0px 6px;}
.piece .qiang_doing {display: inline-block; transform:rotate(45deg);}

.module{position: relative; height: 100%;}

